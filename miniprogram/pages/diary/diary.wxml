<view class="myFoot">
  <image src="/img/foot.png"></image>
  心路
</view>
<view class="addPost" bindtap="postz">
  <image src="/img/addPost.png"></image>
</view>
<view style="flex-direction: column;" wx:if="{{!diary.length}}">

  <view class="empty">
    <image src="/img/empty.png"></image>
  </view>
  <view class="emptyTxt">您还没有足迹呢，快去记录吧！</view>
</view>



<view wx:else>
  <view wx:for="{{diary}}">
    <view class="cu-timeline">
   
 

      <view wx:if="{{diary[index].content}}" class="cu-item text-cyan cuIcon-evaluate_fill">
        <view class="bg-cyan  shadow-blur content">
          <view class="cu-list menu-avatar radius">
            <view class="AAcontent">
              
            <view class="cu-tag line-cyan">{{diaryDate[index]}}</view>
            <view class="cu-tag bg-cyan">{{diary[index].att_id==-1?'其他景点':attration[diary[index].att_id].name}}</view>
            
        
              <view class="text-l culcon-ellipse" style="color:black;" id="{{index}}" bindtap="look">点我{{looking[index]?'收起':'展开'}}日志详情</view>
              <view class="margin-top" wx:if="{{looking[index]}}">
                <rich-text style="color:black;" nodes="{{diary[index].content}}"></rich-text>
              </view>
              <view style="height:1rpx;border-top: solid 1rpx rgba(128, 128, 128, 0.582);"></view>
              <view class="Astate">

                <view id="{{index}}" bindtap="edit">
                  <image style="width:40rpx;height:40rpx;" src="/img/editor.png"></image>
                </view>
                <view id="{{index}}" bindtap="del">
                  <image style="width:40rpx;height:40rpx;margin-left:30rpx" src="/img/delete.png"></image>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>

      <view wx:else class="cu-item">
        <view class="padding-xl radius shadow margin-top content">
          
            <view class="cu-tag line-cyan">{{diaryDate[index]}}</view>
            <view class="cu-tag bg-cyan">{{diary[index].att_id==-1?'其他景点':attration[diary[index].att_id].name}}</view>
            
        
          <view class="margin-top text-sm text-grey">这个景点只有足迹没有日记呢，快去记录吧</view>
          <view class="Astate">   
          </view>

        </view>
      </view>


 

      
    </view>
  </view>
</view>